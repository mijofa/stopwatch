{
  "name": "vr-stopwatch",
  "productName": "VR Stopwatch",
  "version": "1.0.0",
  "description": "Timer designed specifically for helping run VR sessions",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "eslint": "eslint --ignore-path .gitignore \"**/*.{js,vue}\"",
    "prettier": "prettier --ignore-path .gitignore \"**/*.{js,json,yml,md,html,vue}\"",
    "lint:fix": "yarn eslint --fix",
    "lint:check": "yarn eslint",
    "format:fix": "yarn prettier --write --list-different",
    "format:check": "yarn prettier --check"
  },
  "keywords": [],
  "author": {
    "name": "SpiltCoffee",
    "email": "spiltcoffee@users.noreply.github.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "appCopyright": "MIT License, copyright SpiltCoffee 2019",
        "icon": "./src/favicon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "VRStopwatch"
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "spiltcoffee",
              "name": "stopwatch"
            }
          }
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.js",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "fs-jetpack": "^2.2.2",
    "moment": "^2.24.0",
    "uuid": "^3.3.3",
    "vue": "^2.6.10",
    "vue-svg-gauge": "^1.2.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.44",
    "@electron-forge/maker-squirrel": "6.0.0-beta.44",
    "@electron-forge/plugin-webpack": "6.0.0-beta.44",
    "@electron-forge/publisher-github": "6.0.0-beta.44",
    "@fortawesome/fontawesome-free": "^5.10.2",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "electron": "6.0.5",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-vue": "^5.2.3",
    "file-loader": "^4.2.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "node-loader": "^0.6.0",
    "postcss": "^7.0.17",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "style-loader": "^1.0.0",
    "tailwindcss": "^1.1.2",
    "vue-loader": "^15.7.1",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.39.3"
  },
  "lint-staged": {
    "*.{json,yml,md,html,css,vue}": [
      "prettier --ignore-path .gitignore --write",
      "git add"
    ],
    "*.js": [
      "eslint --ignore-path .gitignore",
      "prettier --ignore-path .gitignore --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">=8.3.0"
  }
}
